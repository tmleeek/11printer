<?xml version="1.0" encoding="utf-8"?>
<config>
    <modules>
        <TM_CheckoutFields>
            <version>1.1.0</version>
        </TM_CheckoutFields>
    </modules>

    <global>
        <resources>
            <tm_checkoutfields_setup>
                <setup>
                    <module>TM_CheckoutFields</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </tm_checkoutfields_setup>
        </resources>
        <blocks>
            <checkoutfields>
                <class>TM_CheckoutFields_Block</class>
            </checkoutfields>
        </blocks>
        <models>
            <checkoutfields>
                <class>TM_CheckoutFields_Model</class>
            </checkoutfields>
            <sales>
                <rewrite> <!-- Overriden to add the fields block above products list -->
                    <order_pdf_invoice>TM_CheckoutFields_Model_Order_Pdf_Invoice</order_pdf_invoice>
                </rewrite>
            </sales>
        </models>
        <helpers>
            <checkoutfields>
                <class>TM_CheckoutFields_Helper</class>
            </checkoutfields>
        </helpers>
        <fieldsets>
            <sales_convert_quote>
                <tm_field1><to_order>*</to_order></tm_field1>
                <tm_field2><to_order>*</to_order></tm_field2>
                <tm_field3><to_order>*</to_order></tm_field3>
                <tm_field4><to_order>*</to_order></tm_field4>
                <tm_field5><to_order>*</to_order></tm_field5>
            </sales_convert_quote>
        </fieldsets>
    </global>

    <frontend>
        <layout>
            <updates>
                <checkoutfields>
                    <file>checkoutfields.xml</file>
                </checkoutfields>
            </updates>
        </layout>
        <translate>
            <modules>
                <TM_CheckoutFields>
                     <files>
                          <default>TM_CheckoutFields.csv</default>
                     </files>
                </TM_CheckoutFields>
            </modules>
        </translate>
        <events>
            <controller_action_predispatch_firecheckout_index_saveOrder>
                <observers>
                    <checkoutfields_save_order_firecheckout>
                        <class>checkoutfields/observer</class>
                        <method>setCheckoutFields</method>
                    </checkoutfields_save_order_firecheckout>
                </observers>
            </controller_action_predispatch_firecheckout_index_saveOrder>
        </events>
    </frontend>

    <adminhtml>
        <layout>
            <updates>
                <checkoutfields>
                     <file>checkoutfields.xml</file>
                </checkoutfields>
            </updates>
        </layout>
        <translate>
            <modules>
                <TM_CheckoutFields>
                    <files>
                        <default>TM_CheckoutFields.csv</default>
                    </files>
                </TM_CheckoutFields>
            </modules>
        </translate>
    </adminhtml>

    <default>
        <checkoutfields>
            <tm_field1>
                <status>0</status>
                <label>Field #1</label>
                <type>text</type>
            </tm_field1>
            <tm_field2>
                <status>0</status>
                <label>Field #2</label>
                <type>text</type>
            </tm_field2>
            <tm_field3>
                <status>0</status>
                <label>Field #3</label>
                <type>text</type>
            </tm_field3>
            <tm_field4>
                <status>0</status>
                <label>Field #4</label>
                <type>text</type>
            </tm_field4>
            <tm_field5>
                <status>0</status>
                <label>Field #5</label>
                <type>text</type>
            </tm_field5>
        </checkoutfields>
    </default>
</config>